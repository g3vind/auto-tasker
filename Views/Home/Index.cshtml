@model List<auto_tasker.Models.Task>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <h2>Task List</h2>

    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Due Date</th>
                    <th>Priority</th>
                    <th>Status</th>
                    <th>Created At</th>
                    <th>Updated At</th>
                    <th>Actions</th>  <!-- New column for action buttons -->
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model)
                {
                    <tr>
                        <td>@task.Title</td>
                        <td>@task.Description</td>
                        <td>@task.DueDate.ToString("MM/dd/yyyy")</td>
                        <td>@task.Priority</td>
                        <td>@task.Status</td>
                        <td>@task.CreatedAt.ToString("MM/dd/yyyy")</td>
                        <td>@task.UpdatedAt.ToString("MM/dd/yyyy")</td>
                        <td>
                            <!-- Button to go to task details -->
                            <a href="@Url.Action("GetTaskById", "Home", new { id = task.Id })" class="btn btn-info">View Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No tasks available.</p>
    }
</div>
